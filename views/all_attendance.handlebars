<div>
{{#if loggedIn}}
<nav id="nav">
    <a href="/teacher" class="fa fa-home">Back to Teacher Homepage</a>
    <button id="logout" class="create-button position-absolute top-0 end-0">Logout</button>
</nav>
        <table id="attendance-table">
        <thead>
            <tr>
                <th>Student Name</th>
                {{#each attendanceDates as |dates|}}
                <th>
                    {{dates}}
                </th>
                {{/each}}
            </tr>
        </thead>
        <tbody  id="studentId" name="studentId">
            {{#each studentData as |student|}}
            <tr>
            <td>
            {{student.firstName}} {{student.lastName}}
            </td>
            {{/each}}
           {{!-- {{>student_past_attendance}} --}}
            </tr>
        </tbody>
       </table>
{{else}}
    <a href="/login">Click here to login</a>
{{/if}}
</div>


<div>
  {{#if loggedIn}}
  <nav id="nav">
    <a href="/teacher" class="fa fa-home">Back to Teacher Homepage</a>
    <button id="logout" class="create-button position-absolute top-0 end-0">Logout</button>
  </nav>
    <div class="new-assignment-card">
      <form action="/teacher/assignment/new-assignment" method="POST">
        <ul>
          <div>
            <label for="title">Name of Assignment: </label>
            <input type="text" id="title" name="title" />
            <label for="dueDate">Due Date: </label>
            <input type="date" id="dueDate" name="dueDate"></input>
            <br>
            <label for="assignedStatusTrue">Check here if already assigned:
            </label>
            <input
              type="checkbox"
              id="assignedStatusTrue"
              name="assignedStatus"
              value="true"
            />
            <label for="assignedStatusFalse">Check here if not yet assigned:
            </label>
            <input
              type="checkbox"
              id="assignedStatusFalse"
              name="assignedStatus"
              value="false"
            />
          </div>
        </ul>
         <label id="description-tag"for="description">Details: </label>
          <textarea id="descripton" name="description" rows="2" cols="100">
          </textarea>
        <div class="button">
          <button type="submit">Create Assignment</button>
        </div>
      </form>
    </div>
  {{else}}
    <a href="/login">Click here to login</a>
  {{/if}}

</div>